<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mencobasqlitee">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MencobaSQLITEE">
        <activity android:name=".ui.ProfileActivity"
            android:parentActivityName=".bottom_nav"></activity>
        <activity android:name=".ui.PaymentActivity"
            android:parentActivityName=".bottom_nav"></activity>
        <activity
            android:name=".ui.LoginActivity"
            android:label="Login Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".bottom_nav"
            android:label="@string/title_activity_bottom_nav" />
        <activity
            android:name=".ui.RegisterActivity"
            android:label="Register Activity"
            android:parentActivityName=".ui.LoginActivity" />
        <activity
            android:name=".ui.RecorveryActivity"
            android:label="Recorvery Activity"
            android:parentActivityName=".ui.LoginActivity" />
    </application>

</manifest>